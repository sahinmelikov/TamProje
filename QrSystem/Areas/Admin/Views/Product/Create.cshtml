@model ProductVM
<div class="container">
    <div class="card p-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>

                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>

                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>

                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control">
                <span asp-validation-for="Quantity" class="text-danger"></span>

                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" class="form-control">
                <span asp-validation-for="ImageFile" class="text-danger"></span>

                <label asp-for="ParentsCategoryId"></label>
                <select asp-for="ParentsCategoryId" class="form-control">
                    <option value="">Seçiniz</option>
                    @if (ViewBag.Parents != null)
                    {
                        foreach (SelectListItem product in ViewBag.Parents)
                        {
                            var modelId = Convert.ToInt32(product.Value);
                            var models = ViewBag.Parents as List<ParentCategory>;
                            var model = models?.FirstOrDefault(m => m.Id == modelId);

                            <option value="@product.Value">@product.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="ParentsCategoryId"></span>

                <div class="form-group">
                    <label asp-for="RestorantId"></label>
                    <input asp-for="RestorantId" class="form-control" readonly>
                    <span asp-validation-for="RestorantId" class="text-danger"></span>
                </div>
            </div>
            <button class="btn btn-success" type="submit">Submit</button>
        </form>
    </div>
</div>
