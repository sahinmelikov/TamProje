@model QrCodeVM
<div class="container">
    <div class="card p-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="QrCode"></label>
                <input asp-for="QrCode" class="form-control">
                <span asp-validation-for="QrCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestorantId"></label>
                <input asp-for="RestorantId" class="form-control" readonly>
                <span asp-validation-for="RestorantId" class="text-danger"></span>
            </div>

            <button class="btn btn-success" type="submit">Submit</button>
        </form>
    </div>
</div>